<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="299dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:includeFontPadding="false"
        android:textColor="@color/colourText"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="600dp"
        android:layout_height="85dp"
        android:id="@+id/startEndDateText"
        android:textSize="14sp"
        android:textColor="@color/colourText"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/latLonText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="600dp"
        android:layout_height="55dp"
        android:id="@+id/latLonText"
        android:textSize="14sp"
        android:textColor="@color/colourText"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/linkText"
        android:layout_alignEnd="@+id/linkText" />


    <TextView
        android:id="@+id/linkText"
        android:layout_width="600dp"
        android:layout_height="35dp"
        android:layout_above="@+id/publishDateText"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:autoLink="web"
        android:includeFontPadding="false"
        android:linksClickable="true"
        android:textColor="@color/colourText"
        android:textColorLink="#03A9F4"
        android:textSize="14sp" />

    <TextView
        android:layout_width="600dp"
        android:layout_height="35dp"
        android:id="@+id/publishDateText"
        android:textColor="@color/colourText"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:includeFontPadding="false"
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="390dp"
        android:clickable="true"
        android:text="Map"
        android:visibility="invisible" />


</RelativeLayout>